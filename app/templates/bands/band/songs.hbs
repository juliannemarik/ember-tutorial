{{#if @model.length}}
    <ul>
        {{#each @model as |song|}}
            <li class="mb-2">
                {{song.title}}
                <span class="float-right">
                    <StarRating 
                        @rating={{song.rating}}
                        @onUpdate={{set song.rating _}}
                    />
                </span>
            </li>
        {{/each}}
    </ul>
{{else}}
    <p class="text-center">
        The band has no songs yet.
    </p>
{{/if}}